    <div class="container">
      <div class="jumbotron text-center">
        <h1><span class="glyphicon glyphicon-bullhorn"></span></h1>
        <h2>Video Sharing</h2>
      </div>

      <div class="row">
      <!-- This is the EJS syntax to create a loop -->
      <% videos.forEach(function(video, index) { %>
        <div class="col-sm-12">
          <div class="panel">
            <div class="panel-heading">
                  <img src="https://image.flaticon.com/icons/png/512/3237/3237472.png" alt="Avatar" class="avatar panel-title" style="margin-right: 5px; margin-bottom: 10px;">
                  <a href="/profile/<%= video.user.id %>" class="panel-title" ><%= video.user.username %></a>
                  <h3 class="panel-title"><strong><%= video.title %></strong></h3>
                  <p><%= video.description %></p>
            </div>
            <div class="panel-body" >
              <!-- <h1><%= video.url %></h1> -->
               <div id="player-<%= video._id %>" align='center'></div>
                <script>
                  var player = new Clappr.Player({source: "http://0.0.0.0:3000/watch/<%= video._id %>/master.m3u8", parentId: "#player-<%= video._id %>", plugins: [LevelSelector], levelSelectorConfig: {
                  title: 'Quality',
                  labels: {
                      2: 'High', // 500kbps
                      1: 'Med', // 240kbps
                      0: 'Low', // 120kbps
                  },
                  labelCallback: function(playbackLevel, customLabel) {
                      return customLabel + playbackLevel.level.height+'p'; // High 720p
                  }
                }
                });
                var w = document.getElementById("player-<%= video._id %>").offsetWidth;
                var h = document.getElementById("player-<%= video._id %>").offsetHeight;
                console.log(w);
                console.log(h);
                //player.resize({height: 100%, width: 100%});
              </script>
            </div>
            <div class="panel-footer small">
            <!--  <p>By <%= video.author %></p> -->
            <i onclick="like('darkblue', 'like_button-<%= video._id %>')" id="like_button-<%= video._id %>" class="fa fa-thumbs-up"></i>
            <i onclick="dislike('darkblue', 'dislike_button-<%= video._id %>')" id="dislike_button-<%= video._id %>" class="fa fa-thumbs-down"></i>
            <p> <%= video.views %> views  <%= video.likes %> likes  <%= video.dislikes %> dislikes </p>
            <p> <%= video.datetime %> </p>
            </div>
          </div>
        </div>
      <!-- Weâ€™ll also have to close our loop -->
      <% }) %>
      </div>
    </div>

    <script>

      function like(color, id) {
          // x.classList.toggle("fa-thumbs-down");
          // document.getElementById(id).style.property = new style
          var likeButton = document.getElementById(id);
          if(likeButton.style.color != color) {
            likeButton.style.color = color;
            localStorage.setItem(id, color);
          }
      }

      function dislike(color, id) {
        var dislikeButton = document.getElementById(id);
        if(dislikeButton.style.color != color) {
          dislikeButton.style.color = color;
          localStorage.setItem(id, color);
        }
      }


    </script>

    <% videos.forEach(function(video, index) { %>
        <script>
            like(localStorage.getItem('like_button-<%= video._id %>'), 'like_button-<%= video._id %>');
            dislike(localStorage.getItem('dislike_button-<%= video._id %>'), 'dislike_button-<%= video._id %>');
        </script>
    <% }) %>






